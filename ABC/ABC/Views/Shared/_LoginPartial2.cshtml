@if (!string.IsNullOrEmpty(Convert.ToString(Session["CustomerName"])))
{
    using (Html.BeginForm("CustomerLogOff", "Login", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Welcome : @Session["CustomerName"]</a></li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "CustomerLogin", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
