@model IEnumerable<ABC.ClassRoom>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Class Rooms</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.commencementdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.maxstudent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.coursefee)
        </th>
        <th>
          Lecture Name
        </th>
        <th>
            Created by
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.commencementdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maxstudent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.coursefee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lecture.UserData.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserData.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
